<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">

    <listeners>
        <listener class-name="Listeners.MyListeners"/>
    </listeners>

    <test verbose="2" name="crometest">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="testCases.TC1"/>
        </classes>
    </test>

    <test verbose="2" name="edgetest">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="testCases.TC2"/>
        </classes>
    </test>

    <test verbose="2" name="firefoxtest">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="testCases.TC3"/>
            <class name="testCases.TC4"/>
        </classes>
    </test>

</suite>